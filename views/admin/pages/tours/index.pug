extends ../../layouts/default.pug

block main
    h1(class="mb-4") #{pageTitle}

    .card.mb-3
        .card-header Danh sách tour
        .card-body
            .row    
                .col-8

                .col-4 
                    a(
                        href=`/${prefixAdmin}/tour/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới
            
            table(
                class="table table-hover table-sm"
            )
                thead
                    tr
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th % Giảm giá
                        th Giá đặc biệt
                        th Còn lại
                        th Trạng thái
                        th Vị trí
                        th Hành động

                tbody
                    each item, index in tours
                        tr
                            td #{index + 1}
                            td
                                img(
                                    src=item.avatar
                                    alt=item.title
                                    width="100px"
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.price.toLocaleString()}đ
                            td #{item.discount}%
                            td #{item.price_special.toLocaleString()}đ
                            td #{item.stock}
                            td
                                    if item.status == "active"
                                        a(
                                            href="javascript:;"
                                            class="badge badge-success"
                                        ) Hoạt động
                                    else
                                        a(
                                            href="javascript:;"
                                            class="badge badge-danger"
                                        ) Dừng hoạt động
                            td #{item.position}    
                            td  
                                a(
                                    href=`${prefixAdmin}/tours/detail/${item.id}`
                                    class="btn btn-secondary btn-sm"
                                ) Chi tiết
                                a(
                                    href=`/${prefixAdmin}/tours/edit/${item.id}`
                                    class="btn btn-warning btn-sm"
                                ) Sửa
                                
                                button(
                                    class="btn btn-danger btn-sm ml-1"
                                    data-id=item.id 
                                    button-delete   
                                    ) Xoá
